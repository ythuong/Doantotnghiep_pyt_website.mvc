@model WebShop.Models.Account

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">

    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Index">Danh sách danh mục</a>
            <span class="breadcrumb-item active">Thông tin danh mục: @Model.FullName</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Xác nhận xóa tài khoản</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>Tên khách hàng:</td>
                        <td class="text-dark font-weight-semibold">@Model.FullName</td>
                    </tr>
                    <tr>
                        <td>Số điện thoại</td>
                        <td>@Model.Phone</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <td>Password</td>
                        <td>@Model.Password</td>
                    </tr>
                    <tr>
                        <td>Ngày tạo</td>
                        <td>@Model.CreateDate</td>
                    </tr>
                    <tr>
                        <td>Xác nhận xóa</td>
                        <td>
                            <form asp-controller="AdminAccounts" asp-action="Delete" asp-route-id="@Model.AccountId">
                                <input type="hidden" asp-for="AccountId" />
                                @*<input type="submit" value="Xác nhận xóa" class="btn btn-danger" />*@
                                <button type="submit" class="btn btn-danger btn-tone"><i class="far fa-trash-alt m-r-5 fa-lg" ></i>Xác nhận xóa</button>
                                |
                                <a class="btn btn-success btn-tone m-r-5" asp-action="Index"><i class="fas fa-times m-r-5 fa-lg"></i>Hủy bỏ</a>
                            </form>

                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>

</div>

