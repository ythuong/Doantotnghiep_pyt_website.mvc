@model WebShop.Models.Role

@{
    ViewData["Title"] = "Chỉnh sửa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">

    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Danh sách quyền truy cập</a>
            <span class="breadcrumb-item active">Chỉnh sửa quyền truy cập: @Model.RoleName</span>
        </nav>
    </div>
</div>
<div class="card" style="background-color: #FAEAEA">
    <div class="card-body">
        <form asp-action="Edit" asp-route-id="@Model.RoleId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoleId" />

            <div class="form-group">
                <div class="form-group col-md-6">
                    <label class="col-sm-2 col-form-label">Tên quyền</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="RoleName" placeholder="Role Name">
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label class="col-sm-2 col-form-label">Mô tả</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Description" placeholder="Description">
                    </div>
                </div>


                <div class="form-group col-md-6">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-info btn-tone "><i class="far fa-plus-square m-r-5 fa-lg"></i>Lưu thay đổi</button>
                        |
                        <a class="btn btn-warning btn-tone  " asp-action="Index"><i class="fas fa-undo m-r-5 fa-lg"></i>Quay lại</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


