@model WebShop.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">

    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="AdminCategories" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminCategories" asp-action="Index">Danh sách danh mục</a>
            <span class="breadcrumb-item active">Thông tin danh mục: @Model.CatName</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Bạn có muốn xóa danh mục: @Model.CatName</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.CatId</td>
                    </tr>
                    <tr>
                        <td>Tên danh mục:</td>
                        <td>@Model.CatName</td>
                    </tr>
                    <tr>
                        <td>Mô tả:</td>
                        <td>@Model.Description</td>
                    </tr>
                    <tr>
                        <td>Xác nhận xóa:</td>
                        <td>
                            <form asp-controller="AdminCategories" asp-action="Delete" asp-route-id="@Model.CatId">
                                <input type="hidden" asp-for="CatId" />
                                @*<input type="submit" value="Xác nhận xóa" class="btn btn-danger" />*@
                                <button type="submit" class="btn btn-danger btn-tone"><i class="far fa-trash-alt m-r-5 fa-lg"></i>Xác nhận xóa</button>
                                |
                                <a class="btn btn-success btn-tone m-r-5" asp-action="Index"><i class="fas fa-times m-r-5 fa-lg"></i>Hủy bỏ</a>
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
            @*<div class="card-footer text-center">
            <form asp-action="Delete">
            <input type="hidden" asp-for="ProductId" />
            <input type="submit" value="Xác Nhận Xóa" class="btn btn-danger" /> |
