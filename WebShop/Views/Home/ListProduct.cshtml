@model List<Product>
@if (Model != null && Model.Count > 0)
{
    <section class="product spad">
        <div class="container">
            <div class="row product__filter">
                @foreach (var item in Model)
                {
                    string url = $"/{item.Alias}-{item.ProductId}.html";
                    <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals" href="shop.html">
                        <div class="product__item">
                            <div class="product__item__pic set-bg">
                                <img class="img-full" src="~/images/products/@item.Thumb" alt="@item.Title">
                                <ul class="product__hover">
                                    <li><a href="#"><img src="~/assets/img/icon/heart.png" /></a></li>
                                    <li><a href="#"><img src="~/assets/img/icon/compare.png" /><span>Compare</span></a></li>
                                    <li><a href="/{item.Alias}-{item.ProductId}.html"><img src="~/assets/img/icon/search.png" /></a></li>
                                </ul>
                            </div>
                            <div class="product__item__text">
                                <h6>@item.ProductName</h6>
                                @*  <a href="cart.html" class="add-cart">+ Add To Cart</a>*@
                                <div class="rating">
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                </div>
                                <h5><span class="new-price">@item.Price.Value.ToString("#,##0") VNĐ</span></h5>
                                <div class="product__color__select">
                                    <label for="pc-1">
                                        <input type="radio" id="pc-1">
                                    </label>
                                    <label class="active black" for="pc-2">
                                        <input type="radio" id="pc-2">
                                    </label>
                                    <label class="grey" for="pc-3">
                                        <input type="radio" id="pc-3">
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
@section Scripts{
    <script>
        $(document).ready(function () {
            $(".product-name").each(function (i) {
                var len = $(this).text().trim().length;
                if (len > 1) {
                    $(this).text($(this).text().substr(0, 1) + '...');
                }
            });
        });
    </script>
}
