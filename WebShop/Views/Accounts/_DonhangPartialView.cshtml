@model List<Order>
@if (Model != null && Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <tbody>
                <tr class="text-center">
                    <th>Mã đơn hàng</th>
                    <th>Ngày mua hàng </th>
                    <th>Họ và tên</th>
                    <th>Trạng thái</th>
                    <th>Tổng tiền</th>
                    <th>Chức năng</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a class="account-order-id" href="javascript:void(0)">@item.OrderId</a></td>
                        <td>@item.OrderDate</td>
                        <td>@item.Customer.FullName</td>
                        <td>@item.TransactStatus.Status</td>
                        <td>@item.TotalMoney.Value.ToString("#,##0") VNĐ</td>
                        <td>
                            <a href="javascript:void(0)" class="btn btn-warning btn-primary-hover"><span>Xem đơn hàng</span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>Chưa có đơn hàng</p>
}

