@model WebShop.ModelViews.RegisterVM

@{
    ViewData["Title"] = "DangKyTaiKhoan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="main-content">

    <!DOCTYPE html>
    <html>
    <head>
        <title>Form đăng ký</title>
        <!-- Nạp các tệp CSS của Bootstrap -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    </head>
    <body>

        <section class="vh-100" style="background-color: #FFF0F5">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-lg-12 col-xl-11" >
                        <div class="card text-black" style="border-radius: 25px; background-color:#FAEAEA">
                            <div class="card-body p-md-5">
                                <div class="row justify-content-center">
                                    <div class="col-md-8 order-2 order-lg-1">

                                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Đăng ký tài khoản</p>

                                        <form asp-action="DangKyTaiKhoan" class="mx-1 mx-md-4">

                                            <div class="d-flex flex-row align-items-center mb-4	">
                                                <i class="far fa-user fa-fw fa-2x"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <label for="email">Họ và tên *</label>
                                                    <input placeholder="Họ và tên" asp-for="FullName" type="text" id="form3Example1c" class="form-control" />
                                                    <span asp-validation-for="FullName"></span>
                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="far fa-envelope-open fa-fw fa-2x"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <label for="email">Email *</label>
                                                    <input type="email" asp-for="Email" id="form3Example3c" class="form-control" placeholder="Email" />
                                                    <span asp-validation-for="Email"></span>
                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-phone-alt fa-fw fa-2x"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <label for="phone">Số điện thoại *</label>
                                                    <input type="tel" asp-for="Phone" id="form3Example4c" class="form-control" placeholder="Số điện thoại" />
                                                    <span asp-validation-for="Phone"></span>
                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-unlock-alt fa-fw fa-2x"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <label for="pwd">Mật khẩu *</label>
                                                    <input type="password" asp-for="Password" id="form3Example4cd" class="form-control" placeholder="Mật khẩu" />
                                                    <span asp-validation-for="Password"></span>
                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-lock fa-fw fa-2x"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <label for="confirm_pwd">Nhập lại mật khẩu *</label>
                                                    <input type="password" asp-for="ConfirmPassword" asp-for="Password" id="form3Example4cd" class="form-control" placeholder="Nhập lại mật khẩu" />
                                                    <span asp-validation-for="ConfirmPassword"></span>
                                                </div>
                                            </div>

                                            <div class="form-check d-flex justify-content-center mb-5">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
                                                    <label class="form-check-label" for="flexCheckDefault">Đồng ý với các điều khoản? <a href="#!">Điều khoản</a></label>
                                                </div>
                                            </div>

                                            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                                <button type="submit" class="btn btn-primary btn-lg">Đăng ký</button>
                                            </div>

                                        </form>

                                    </div>
                                    <div class="col-md-4  d-flex align-items-center order-1 order-lg-2">

                                        <img src="~/assets/images/logo/logoshop.png"
                                             class="img-fluid" alt="Sample image">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Nạp các tệp JavaScript của Bootstrap -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    </body>
</html>
</main>
