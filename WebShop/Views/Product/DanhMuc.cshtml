@using PagedList.Core.Mvc;

@model PagedList.Core.IPagedList<WebShop.Models.Product>
<div class="breadcrumb-area breadcrumb-height" data-bg-image="~/assets/images/breadcrumb/bg/1-1-1920x373.jpg">
    <div class="container h-100">
        <div class="row h-100">
            <div class="col-lg-12">
                <div class="breadcrumb-item">
                    <ul class="nav product-tab-nav pb-10" id="myTab" role="tablist">

                        @foreach (var item in Model)
                        {
                            <li class="nav-item" role="presentation">
                                <a id="fresh-fruits-tab" data-bs-toggle="tab" href="@item.Cat.CatName" role="tab" aria-controls="fresh-fruits" aria-selected="false">
                                    <div class="product-tab-icon">
                                        <img src="~/assets/images/product/icon/2.png" alt="@item.Cat.CatName">
                                    </div>
                                    <a href="/Home/DanhMuc?CatID=@item.Cat.CatId">
                                        @item.Cat.CatName
                                    </a>
                                </a>
                            </li>

                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
@if (Model != null && Model.Count > 0)
{
    <div class="product-item-wrap row">
        @foreach (var item in Model)
        {
            string url = $"/{item.Alias}-{item.ProductId}.html";
            <div class="col-xl-3 col-lg-4 col-sm-6">
                <div class="product-item">
                    <div class="product-img img-zoom-effect">
                        <a href="@url">
                            <img class="img-full" src="~/images/products/@item.Thumb" alt="@item.Title">
                        </a>
                        <div class="product-add-action">
                            <ul>
                                <li>
                                    <a href="cart.html">
                                        <i class="pe-7s-cart"></i>
                                    </a>
                                </li>

                            </ul>
                        </div>
                    </div>
                    <div class="product-content align-self-center">
                        <a class="product-name" maxlength="10" href="@url">@item.ProductName</a>
                        <div class="price-box pb-1">
                            <span class="new-price">@item.Price.Value.ToString("#,##0") VNĐ</span>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
}
@section Scripts{
    <script>
        $(document).ready(function () {
            $(".product-name").each(function (i) {
                var len = $(this).text().trim().length;
                if (len > 30) {
                    $(this).text($(this).text().substr(0, 30) + '...');
                }
            });
        });
    </script>
}
